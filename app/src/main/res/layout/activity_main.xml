<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f5fd14"

    >


   <TextView

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="দোকানের হিসাব"
       android:textStyle="bold"
       android:textSize="44sp"
       android:gravity="center"
       android:background="#23ffc3"
       />

   <EditText
       android:id="@+id/edibay"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="numberDecimal"
      android:hint="Bay_prices"
       android:gravity="center"
       android:textSize="25sp"
       />




   <TextView

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="কত টাকা বিক্রি করছেন"
       android:textSize="40sp"
       android:textStyle="bold"
       android:textColor="#ff2f8c"
       android:gravity="center"
       />

   <EditText
       android:id="@+id/edisell"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="numberDecimal"
       android:hint="Baysel"
       android:textSize="25sp"
       android:gravity="center"
       />

   <Button
       android:id="@+id/button1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="হিসাব করুন"
       android:textSize="20sp"
       android:background="#48ff2a"
       />



   <TextView
       android:id="@+id/texview1"
       android:layout_width="match_parent"
       android:layout_height="100dp"
      android:text=""
      android:textSize="40sp"
       android:textStyle="bold"
       android:textColor="#21b1ff"


      />



</LinearLayout>